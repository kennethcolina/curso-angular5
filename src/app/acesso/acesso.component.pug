.container
	.row
		.col-sm-6.d-flex.justify-content-end([@animacao-banner]="estadoBanner")
			app-banner

		.col-sm-6.d-flex.justify-content-start(*ngIf="cadastro; else formLogin", [@animacao-painel]="estadoPainel")
			app-cadastro((exibirPainel)="exibirPainel($event)")

		ng-template('#formLogin'="")
			.col-sm-6.d-flex.justify-content-start([@animacao-painel]="estadoPainel")
				app-login((exibirPainel)="exibirPainel($event)")

